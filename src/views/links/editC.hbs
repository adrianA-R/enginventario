<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
            
          <form action="/links/editC/{{com.id}}" method="POST">
            <div class="form-group">
              <input type="text" value="{{ com.name }}" name="name" class="form-control" placeholder="Nombre" autofocus>
            </div>
            <div class="form-group">
              <input type="number" value="{{com.price}}" name="price" class="form-control" placeholder="Precio">
            </div>
            <div class="form-group">
              <select name="type" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                <option selected> {{com.type}} </option>
                <option value="1">Mecánico</option>
                <option value="2">Electrónico</option>
                <option value="3">Auxiliares</option>
              </select>
            </div>
            <div class="form-group">
              <input type="number" value="{{com.amount}}" name="amount" class="form-control" placeholder="">
            </div>
            <div class="form-group">
              <textarea name="description" rows="2" class="form-control" placeholder="Descripción">{{com.description}}</textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-success"> Guardar cambios </button>
            </div>
            <div class="form-group">
              <a href="/links/change/{{com.id}}" class="btn btn-warning"> Cambiar de robot </a>
            </div>
          </form>
        
        </div>
      </div>
    </div>
  </div>
</div>

