<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card">
        <div class="card-body">
          <form action="/links/change/{{ id }}" method="POST">
            <div class="form-group">
              {{#if products}}
              <select name="products_id" class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                <option selected> Seleccione el robot del articulo </option>
                {{#each products}}
                  <option value=" {{ products_id }} " > {{ name }} </option>
                {{/each}}
              </select>
              {{/if}}
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block"> Guardar cambios </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>